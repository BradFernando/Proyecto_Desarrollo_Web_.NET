@model List<ProyectoBitsBites.Models.TableViewModel.ProductoTableViewModel>
@{
    Layout = null;
    var total = 0;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Gestión Productos</title>
    
</head>
<body>
    <nav class="navbar">
        <ul>
            <li>
                <a onclick="location.href='@Url.Action("PedidosList", "Carrito")'">
                    <img src="https://cdn-icons-png.flaticon.com/512/7132/7132915.png" width="51" height="51" alt="Carrito" />
                </a>
                <a onclick="location.href='@Url.Action("OutLogin", "Acceso")'">
                    <img src="https://cdn.icon-icons.com/icons2/2248/PNG/512/logout_variant_icon_136438.png" width="51" height="51" alt="Carrito" />
                </a>
            </li>
        </ul>
    </nav>
    <div class="container">
        <br />
        <div class="button-container">
            <button onclick="window.location.href='/Home/Index'">Regresar</button>
            <button class="btn btn-danger" onclick="location.href='@Url.Action("ProductForm", "Product")'">Agregar Producto</button>
        </div>

        <h2>Lista de Productos</h2>
        <table>
            <tr>
                <th>Producto</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Categoría Perteneciente</th>
                <th>Img</th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var oProducto in Model)
            {
                <tr>
                    <td>@oProducto.Nombre</td>
                    <td>@oProducto.Descripcion</td>
                    <td>@oProducto.Precio</td>
                    <td>@oProducto.Categoria</td>
                    <td><img src=@((@oProducto.Imagen != null) ? ("data:image/png;base64," + @Convert.ToBase64String(oProducto.Imagen)) : "#") width="100" height="100" /></td>
                    <td><button class="btn btn-warning" onclick="location.href='@Url.Action("ProductForm", "Product", new { id = @oProducto.ID })'">Editar Producto</button></td>
                    <td><button class="btn btn-danger" onclick="location.href='@Url.Action("EliminarProduct", "Product", new { id = @oProducto.ID})'">Eliminar producto</button></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
